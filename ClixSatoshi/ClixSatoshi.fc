            GoToUrl("https://clixsatoshi.com/");
            Wait();			
            Wait(2);
            //Driver.Manage().Cookies.DeleteAllCookies();
            GoToUrl("https://clixsatoshi.com/login");	
			Wait();
        }

        

        //This faucet has nothing to do here.    
        return base.DoLogin();
    }
