                Click(LoginButton);
            }
            else
            {
                GoToUrl("https://clixsatoshi.com/login");
				
            }
            Wait();			
            Wait(2);
        }

        CheckCloudFlare();


        IWebElement Userbox = ElementByXPath("//input[@id='username']");
        if (!IsVisible(Userbox))
        {

            return Fail("User box not visible");
