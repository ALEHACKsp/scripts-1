    /// </summary>
    public override int GetFaucetWaitTime()
    {
        int time_wait;
        try
        {
            time_wait = GetIntSetting("Time");
        }
        catch (Exception)
        {
            time_wait = 60;
        }
        if (cs)
        {
            return time_wait*60;
        }
        //let Faucet Collector continue.
        return base.GetFaucetWaitTime();
    }

