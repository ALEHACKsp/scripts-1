    private int Different_pixels(Bitmap image1,Bitmap image2)
    {
        int cont = 0;
        for(int i = 0; i < image1.Width; i++)
        {
            for(int j = 0; j < image1.Height; j++){

                if (image1.GetPixel(i, j) != image2.GetPixel(i, j))
                {
                    cont++;
                }
            }
        }

        return cont;
    }

    
